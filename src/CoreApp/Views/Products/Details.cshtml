@model African_Beauty_Trading.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4" style="max-width: 900px;">
    <div class="card shadow border-0 rounded-4">
        <div class="card-body">
            <h2 class="fw-bold">Product Details</h2>
            <p class="text-muted">View complete information about this product.</p>
            <hr />

            <div class="row g-3">
                <div class="col-md-4 text-center">
                    <img src="@((!string.IsNullOrEmpty(Model.ImagePath)) ? Url.Content(Model.ImagePath) : Url.Content("~/Content/img/placeholder.svg"))"
                         alt="@Model.Name"
                         class="img-fluid rounded" style="max-height: 220px; object-fit: cover;" />
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4">Department</dt>
                        <dd class="col-sm-8">@((Model.Department != null) ? Model.Department.Name : "")</dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@((Model.Category != null) ? Model.Category.Name : "")</dd>

                        <dt class="col-sm-4">Size/Age</dt>
                        <dd class="col-sm-8">@((Model.Department != null && Model.Department.Name == "Kids") ? Model.AgeGroup : Model.Size)</dd>

                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8">R @Model.Price.ToString("N2")</dd>

                        <dt class="col-sm-4">Rental Fee</dt>
                        <dd class="col-sm-8">R @Model.RentalFee.ToString("N2")</dd>

                        <dt class="col-sm-4">Stock</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Stock)</dd>

                        <dt class="col-sm-4">Image Path</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ImagePath)</dd>
                    </dl>
                </div>
            </div>

            <div class="d-flex align-items-center gap-2 mt-3">
                <a class="btn btn-primary" href="@Url.Action("Edit", new { id = Model.Id })"><i class="bi bi-pencil"></i> Edit Product</a>
                @Html.ActionLink("Back to Products", "Index", null, new { @class = "btn btn-outline-secondary" })
            </div>
        </div>
    </div>
</div>
