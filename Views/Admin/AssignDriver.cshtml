@model African_Beauty_Trading.Models.Order

@{
    ViewBag.Title = "Assign Driver";
}

<h2>Assign Driver for Order #@Model.Id</h2>

<p><strong>Customer:</strong> @Model.Customer.Email</p>
<p><strong>Total:</strong> R @Model.TotalPrice</p>

@using (Html.BeginForm("AssignDriver", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <!-- Hidden field for orderId -->
    @Html.Hidden("orderId", Model.Id) <!-- Make sure this line exists -->
    
    <div class="form-group">
        <label>Select Driver:</label>
        @Html.DropDownList("driverId", (SelectList)ViewBag.Drivers, "Select Driver", 
            new { @class = "form-control" })
    </div>
    
    <button type="submit" class="btn btn-primary">Assign Driver</button>
}