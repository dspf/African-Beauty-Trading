@model African_Beauty_Trading.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4" style="max-width: 900px;">
    <div class="card shadow border-0 rounded-4">
        <div class="card-body">
            <h2 class="text-danger fw-bold">Delete Product</h2>
            <p class="text-muted">Are you sure you want to delete this product? This action cannot be undone.</p>
            <hr />

            <div class="row g-3">
                <div class="col-md-4 text-center">
                    <img src="@((!string.IsNullOrEmpty(Model.ImagePath)) ? Url.Content(Model.ImagePath) : Url.Content("~/Content/img/placeholder.svg"))"
                         alt="Product Image"
                         class="img-fluid rounded" style="max-height: 220px; object-fit: cover;" />
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.Name)</dd>

                        <dt class="col-sm-4">Size</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Size)</dd>

                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8">R @Model.Price.ToString("N2")</dd>

                        <dt class="col-sm-4">Rental Fee</dt>
                        <dd class="col-sm-8">R @Model.RentalFee.ToString("N2")</dd>

                        <dt class="col-sm-4">Stock</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Stock)</dd>

                        <dt class="col-sm-4">Image Path</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ImagePath)</dd>
                    </dl>
                </div>
            </div>

            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()

                <div class="d-flex align-items-center gap-2 mt-3">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    @Html.ActionLink("Back to Products", "Index", null, new { @class = "btn btn-outline-secondary" })
                </div>
            }
        </div>
    </div>
</div>
