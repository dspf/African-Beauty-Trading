        }

    .cultural-border {
        border: 2px solid var(--secondary);
        border-radius: 10px;
    }

    .animate-delay-1 {
        animation-delay: 0.2s;
    }

    .animate-delay-2 {
        animation-delay: 0.4s;
    }

    .animate-delay-3 {
