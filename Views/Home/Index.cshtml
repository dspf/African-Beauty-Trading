@section Scripts {
    <script>
        // In your index.cshtml or a separate JS file
$(document).ready(function() {
    $('.add-to-cart').click(function(e) {
        e.preventDefault();

        // Check if user is authenticated
        @if (User.Identity.IsAuthenticated)
        {
            <text>
            // User is logged in - add to cart
            var productId = $(this).data('id');
            var productName = $(this).data('name');
            var price = $(this).data('price');
            var image = $(this).data('image');
            var isRental = $(this).data('is-rental');

            // AJAX call to add to cart
            $.post('@Url.Action("AddToCart", "Customer")', {
                productId: productId,
                productName: productName,
                price: price,
                image: image,
                isRental: isRental
            }, function(response) {
                if (response.success) {
                    toastr.success('Item added to cart!');
                    // Update cart count
                    $('#cart-count').text(response.cartCount);
                } else {
                    toastr.error('Error adding item to cart');
                }
            });
            </text>
        }
        else
        {
            <text>
            // User is not logged in - redirect to login
            toastr.info('Please login to add items to your cart');
            setTimeout(function() {
                window.location.href = '@Url.Action("Login", "Account")?returnUrl=' + encodeURIComponent(window.location.pathname);
            }, 1500);
            </text>
        }
    });
});
        // Simple testimonial slider
        document.addEventListener('DOMContentLoaded', function () {
            const testimonials = document.querySelectorAll('.testimonial');
            let currentTestimonial = 0;

            function showTestimonial(index) {
                testimonials.forEach((testimonial, i) => {
                    testimonial.style.display = i === index ? 'block' : 'none';
                });
            }

            // Auto-rotate testimonials
            setInterval(() => {
                currentTestimonial = (currentTestimonial + 1) % testimonials.length;
                showTestimonial(currentTestimonial);
            }, 5000);

            // Show first testimonial initially
            showTestimonial(0);
        });
    </script>
