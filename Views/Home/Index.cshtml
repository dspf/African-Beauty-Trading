    <script>
        $(document).ready(function () {
            // Initialize category tabs
            initializeCategoryTabs();

            // Newsletter subscription
            $('.newsletter-form button').click(function () {
                var email = $('.newsletter-input').val();
                if (email) {
                    toastr.success('Thank you for subscribing to our newsletter!');
                    $('.newsletter-input').val('');
                } else {
                    toastr.warning('Please enter your email address');
                }
            });

            // Add to cart buttons now redirect to registration
            $('.add-to-cart').click(function (e) {
                console.log('Redirecting to registration for shopping...');
            });

            // Wishlist functionality
            $('.product-wishlist').click(function (e) {
                e.preventDefault();
                $(this).toggleClass('active');

                if ($(this).hasClass('active')) {
                    $(this).html('<i class="fas fa-heart" style="color: #ffd1dc;"></i>');
                    toastr.info('Please register to save items to your wishlist');
                } else {
                    $(this).html('<i class="fas fa-heart"></i>');
                }
            });
        });
        function initializeCategoryTabs() {
            const tabButtons = document.querySelectorAll('.tab-button');
            const categoryContents = document.querySelectorAll('.category-content');

            // Show all products by default
            showAllProducts();

            tabButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const category = this.getAttribute('data-category');

                    // Update active tab
                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');

                    // Show/hide category contents
                    categoryContents.forEach(content => {
                        content.classList.remove('active');
                    });

                    if (category === 'all') {
                        showAllProducts();
                        document.getElementById('all').classList.add('active');
                    } else {
                        document.getElementById(category).classList.add('active');
                    }
                });
            });
        }

        function showAllProducts() {
            const allProductsContainer = document.getElementById('all-products-container');
            const allProducts = [];

            // Collect products from all categories
            document.querySelectorAll('.category-content:not(#all) .col-md-4, .category-content:not(#all) .col-12').forEach(product => {
                allProducts.push(product.cloneNode(true));
            });

            // Shuffle and display products (optional)
            const shuffledProducts = shuffleArray(allProducts);

            // Clear container and add products
            allProductsContainer.innerHTML = '';
            shuffledProducts.forEach(product => {
                allProductsContainer.appendChild(product);
            });
        }

        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
            return array;
        }

        // Simple testimonial slider
        document.addEventListener('DOMContentLoaded', function () {
            const testimonials = document.querySelectorAll('.testimonial');
            let currentTestimonial = 0;

            function showTestimonial(index) {
                testimonials.forEach((testimonial, i) => {
                    testimonial.style.display = i === index ? 'block' : 'none';
                });
            }

            // Auto-rotate testimonials
            setInterval(() => {
                currentTestimonial = (currentTestimonial + 1) % testimonials.length;
                showTestimonial(currentTestimonial);
            }, 5000);

            // Show first testimonial initially
            showTestimonial(0);
        });
    </script>
}