@{
    Layout = null;                       // stand-alone layout
    var appName = "African Haritage";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - @appName (Admin)</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap 5 (if you already bundle it, you can remove this CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Icons (optional) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Chart.js for small KPI charts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
        function confirmLogout() {
            if (confirm('Are you sure you want to go home and logout?')) {
                document.getElementById('logoutForm').submit();
                return false;
            }
            return false;
        }
    </script>

    <style>
        :root {
            --sidebar-width: 260px;
        }

        body {
            min-height: 100vh;
            display: flex;
        }

        .admin-sidebar {
            width: var(--sidebar-width);
            flex: 0 0 var(--sidebar-width);
            background: #0f172a; /* slate-900 */
            color: #e2e8f0; /* slate-200 */
        }

            .admin-sidebar a {
                color: #cbd5e1;
                text-decoration: none;
            }

                .admin-sidebar a.active, .admin-sidebar a:hover {
                    color: #fff;
                }

        .admin-content {
            flex: 1 1 auto;
            background: #f8fafc;
        }

        .admin-topbar {
            position: sticky;
            top: 0;
            z-index: 10;
            background: white;
            border-bottom: 1px solid #e5e7eb;
        }

        .brand {
            font-weight: 700;
            letter-spacing: .3px;
        }
        /* No footer here (per your request) */
    </style>
</head>
<body>
    @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm", style = "display:none;" }))
    {
        @Html.AntiForgeryToken()
    }
    <!-- Sidebar -->
    <nav class="admin-sidebar d-flex flex-column p-3">
        <div class="d-flex align-items-center mb-4">
            <i class="bi bi-speedometer2 me-2"></i>
            <span class="brand">@appName Admin</span>
        </div>

        <div class="small text-uppercase text-secondary mb-2">Main</div>
        <ul class="nav nav-pills flex-column mb-3 gap-1">
            <li class="nav-item">
                <a class="nav-link" href="#" onclick="return confirmLogout();">
                    <i class="bi bi-house me-2"></i> Home & Logout
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewBag.NavActive=="Dashboard" ? "active" : "")" href="@Url.Action("Dashboard","Admin")">
                    <i class="bi bi-graph-up-arrow me-2"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewBag.NavActive=="Orders" ? "active" : "")" href="@Url.Action("Orders","Admin")">
                    <i class="bi bi-receipt me-2"></i> Orders
                </a>
            </li>
           
            <li class="nav-item">
                <a class="nav-link @(ViewBag.NavActive=="CreateOrder" ? "active" : "")" href="@Url.Action("Create","Products")">
                    <i class="bi bi-plus-circle me-2"></i> Create Product
                </a>
            </li>
        </ul>

        <div class="small text-uppercase text-secondary mb-2">Catalog</div>
        <ul class="nav nav-pills flex-column mb-3 gap-1">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","Products")">
                    <i class="bi bi-box-seam me-2"></i> Products
                </a>
            </li>
        </ul>

        <div class="small text-uppercase text-secondary mb-2">People</div>
        <ul class="nav nav-pills flex-column mb-3 gap-1">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Orders","Admin", new { status = "Paid" })">
                    <i class="bi bi-truck me-2"></i> Assign Deliveries
                </a>
            </li>
        </ul>

        <div class="mt-auto">
            <hr class="border-secondary" />
            <a class="nav-link" href="#" onclick="return confirmLogout();">
                <i class="bi bi-globe me-2"></i> Back to site & Logout
            </a>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>

    <!-- Main content -->
    <div class="admin-content">
        <div class="admin-topbar px-3 py-2 d-flex justify-content-between align-items-center">
            <div class="fw-semibold">@ViewBag.Title</div>
            <div class="text-muted small">
                @User.Identity.Name
            </div>
        </div>

        <main class="p-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
