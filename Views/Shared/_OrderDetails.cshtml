@model African_Beauty_Trading.Models.Order

<div class="card mb-4">
    <div class="card-header">
        <h5>Order #@Model.Id</h5>
        <small class="text-muted">Placed on @Model.OrderDate.ToString("MMM dd, yyyy")</small>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <h6>Shipping Details</h6>
                <p>
                    <strong>Address:</strong> @Model.DeliveryAddress<br />
                    <strong>Status:</strong> <span class="badge bg-@(Model.PaymentStatus == "Paid" ? "success" : "warning")">@Model.PaymentStatus</span><br />
                    <strong>Courier:</strong> @Model.CourierName<br />
                    <strong>Tracking Number:</strong> @Model.CourierTrackingNumber<br />
                    <strong>Courier Status:</strong> @Model.CourierStatus
                </p>
            </div>
            <div class="col-md-6">
                <h6>Delivery Timeline</h6>
                <p>
                    @if (Model.ShippedDate.HasValue)
                    {
                        <strong>Shipped:</strong> @Model.ShippedDate.Value.ToString("MMM dd, yyyy")<br />
                    }
                    @if (Model.EstimatedDeliveryDate.HasValue)
                    {
                        <strong>Estimated Delivery:</strong> @Model.EstimatedDeliveryDate.Value.ToString("MMM dd, yyyy")<br />
                    }
                </p>
            </div>
        </div>

        <h6>Order Items</h6>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>@item.Quantity</td>
                            <td>R @item.Price.ToString("0.00")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="2" class="text-end">Total:</th>
                        <th>R @Model.TotalPrice.ToString("0.00")</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>