@model African_Beauty_Trading.Models.Product

@{
    ViewBag.Title = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="product-detail-container">
    <div class="breadcrumb-nav">
        <a href="@Url.Action("Index", "Home")">Home</a> /
        <a href="@Url.Action("Index", "Products")">Products</a> /
        <span>@Model.Name</span>
    </div>

    <div class="product-detail-card">
        <div class="product-image-section">
            <div class="main-image">
                <img src="@Url.Content(Model.ImagePath ?? "~/Content/Images/placeholder.jpg")" alt="@Model.Name" class="img-fluid" />
            </div>
        </div>

        <div class="product-info-section">
            <h1 class="product-title">@Model.Name</h1>

            <div class="product-meta">
                <div class="meta-item">
                    <span class="meta-label">Category:</span>
                    <span class="meta-value">@Model.Category.Name</span>
                </div>
                <div class="meta-item">
                    <span class="meta-label">Department:</span>
                    <span class="meta-value">@Model.Department.Name</span>
                </div>
                <div class="meta-item">
                    <span class="meta-label">Size:</span>
                    <span class="meta-value">@Model.Size</span>
                </div>
            </div>

            <div class="pricing-section">
                <div class="price-card">
                    <div class="price-type">Purchase Price</div>
                    <div class="price-amount">R @Model.Price.ToString("N2")</div>
                </div>

                <div class="price-card rental">
                    <div class="price-type">Rental Fee</div>
                    <div class="price-amount">R @Model.RentalFee.ToString("N2")</div>
                </div>
            </div>

            <div class="stock-info">
                <span class="stock-badge @(Model.Stock > 0 ? "in-stock" : "out-of-stock")">
                    @(Model.Stock > 0 ? $"{Model.Stock} in stock" : "Out of stock")
                </span>
            </div>

            <div class="action-buttons">
                @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post))
                {
                    @Html.Hidden("productId", Model.Id)
                    @Html.Hidden("isRental", false)
                    <button type="submit" class="btn btn-buy">Add to Cart - Buy</button>
                }

                @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post))
                {
                    @Html.Hidden("productId", Model.Id)
                    @Html.Hidden("isRental", true)
                    <button type="submit" class="btn btn-rent">Add to Cart - Rent</button>
                }
            </div>
        </div>
    </div>
</div>

