@model African_Beauty_Trading.Models.Product

@{
    ViewBag.Title = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="product-detail-container">
    <div class="breadcrumb-nav">
        <a href="@Url.Action("Index", "Home")">Home</a> /
        <a href="@Url.Action("Browse", "Customer")">Products</a> /
        <span>@Model.Name</span>
    </div>

    <div class="product-detail-card">
        <div class="product-image-section">
            <div class="main-image">
                <!-- FIXED: Use ImageUrl instead of ImagePath -->
                <img src="@Url.Content(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : "~/Content/Images/placeholder.jpg")"
                     alt="@Model.Name"
                     class="img-fluid"
                     onerror="this.src='@Url.Content("~/Content/Images/placeholder.jpg")'" />
            </div>
        </div>

        <div class="product-info-section">
            <h1 class="product-title">@Model.Name</h1>

            <div class="product-meta">
                <div class="meta-item">
                    <span class="meta-label">Category:</span>
                    <span class="meta-value">
                        @if (Model.Category != null)
                        {
                            @Model.Category.Name
                        }
                        else
                        {
                            <text>No Category</text>
                        }
                    </span>
                </div>
                <!-- REMOVED: Department section -->
                <div class="meta-item">
                    <span class="meta-label">Status:</span>
                    <span class="meta-value">
                        @if (Model.Featured)
                        {
                            <span class="badge bg-warning text-dark">⭐ Featured</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Standard</span>
                        }
                    </span>
                </div>
            </div>

            <div class="description-section">
                <h3>Description</h3>
                <p class="product-description">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        @Model.Description
                    }
                    else
                    {
                        <span class="text-muted">No description available</span>
                    }
                </p>
            </div>

            <div class="pricing-section">
                <div class="price-card">
                    <div class="price-type">Price</div>
                    <div class="price-amount">R @Model.Price.ToString("N2")</div>
                </div>
            </div>

            <div class="stock-info">
                <span class="stock-badge @(Model.Stock > 0 ? "in-stock" : "out-of-stock")">
                    @if (Model.Stock > 0)
                    {
                        <text>@Model.Stock in stock</text>
                    }
                    else
                    {
                        <text>Out of stock</text>
                    }
                </span>
            </div>

            <div class="action-buttons">
                @if (Model.Stock > 0)
                {
                    using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("productId", Model.Id)
                        <div class="quantity-selector mb-3">
                            <label for="quantity" class="form-label fw-bold">Quantity:</label>
                            <select name="quantity" id="quantity" class="form-select" style="max-width: 120px;">
                                @for (int i = 1; i <= Math.Min(Model.Stock, 10); i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-buy">
                            <i class="fas fa-shopping-cart me-2"></i>Add to Cart
                        </button>
                    }
                }
                else
                {
                    <button class="btn btn-secondary" disabled>
                        <i class="fas fa-times me-2"></i>Out of Stock
                    </button>
                }

                <a href="@Url.Action("Browse", "Customer")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                </a>
            </div>

            <!-- Additional Product Info -->
            <div class="additional-info mt-4">
                <div class="info-card">
                    <h4><i class="fas fa-shipping-fast me-2"></i>Delivery Information</h4>
                    <p>This item will be delivered via <strong>PEP Courier</strong>. Estimated delivery: 3-5 business days.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .product-detail-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 15px;
    }

    .breadcrumb-nav {
        margin-bottom: 20px;
        font-size: 0.9rem;
        color: #6c757d;
    }

        .breadcrumb-nav a {
            color: #8a5d3b;
            text-decoration: none;
        }

            .breadcrumb-nav a:hover {
                text-decoration: underline;
            }

    .product-detail-card {
        display: flex;
        flex-direction: column;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    @@media (min-width: 992px) {
        .product-detail-card {
            flex-direction: row;
        }
    }

    .product-image-section {
        flex: 1;
        padding: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fafafa;
    }

    .main-image {
        max-width: 100%;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

        .main-image img {
            width: 100%;
            height: auto;
            display: block;
            max-height: 500px;
            object-fit: contain;
        }

    .product-info-section {
        flex: 1;
        padding: 30px;
    }

    @@media (min-width: 992px) {
        .product-info-section {
            border-left: 1px solid #eee;
        }
    }

    .product-title {
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 20px;
        font-size: 1.8rem;
    }

    .product-meta {
        margin-bottom: 25px;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 8px;
    }

    .meta-item {
        display: flex;
        margin-bottom: 10px;
        align-items: center;
    }

    .meta-label {
        font-weight: 600;
        color: #2c3e50;
        min-width: 100px;
    }

    .meta-value {
        color: #5a6c7d;
    }

    .description-section {
        margin-bottom: 25px;
    }

        .description-section h3 {
            color: #2c3e50;
            margin-bottom: 10px;
            font-size: 1.3rem;
        }

    .product-description {
        color: #5a6c7d;
        line-height: 1.6;
        font-size: 1rem;
    }

    .pricing-section {
        margin-bottom: 25px;
    }

    .price-card {
        padding: 20px;
        border-radius: 8px;
        background: #f8f9fa;
        text-align: center;
        border: 2px solid #e9ecef;
    }

    .price-type {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 5px;
    }

    .price-amount {
        font-size: 1.8rem;
        font-weight: 700;
        color: #28a745;
    }

    .stock-info {
        margin-bottom: 25px;
    }

    .stock-badge {
        padding: 10px 20px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 1rem;
        display: inline-block;
    }

        .stock-badge.in-stock {
            background: #e7f6e9;
            color: #2a7d2e;
            border: 1px solid #2a7d2e;
        }

        .stock-badge.out-of-stock {
            background: #ffe5e5;
            color: #d32f2f;
            border: 1px solid #d32f2f;
        }

    .action-buttons {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-bottom: 20px;
    }

    @@media (min-width: 576px) {
        .action-buttons {
            flex-direction: row;
            align-items: flex-start;
        }
    }

    .btn {
        padding: 14px 20px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        text-align: center;
        text-decoration: none;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        cursor: pointer;
        font-size: 1rem;
        font-family: inherit;
        flex: 1;
    }

    .btn-buy {
        background: #28a745;
        color: white;
    }

        .btn-buy:hover {
            background: #218838;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(40, 167, 69, 0.3);
            color: white;
        }

    .btn-outline-secondary {
        background: transparent;
        color: #6c757d;
        border: 2px solid #6c757d;
    }

        .btn-outline-secondary:hover {
            background: #6c757d;
            color: white;
            transform: translateY(-2px);
        }

    .additional-info {
        border-top: 1px solid #eee;
        padding-top: 20px;
    }

    .info-card {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        border-left: 4px solid #007bff;
    }

        .info-card h4 {
            color: #2c3e50;
            margin-bottom: 10px;
            font-size: 1.1rem;
        }

        .info-card p {
            color: #5a6c7d;
            margin: 0;
        }

    .quantity-selector {
        max-width: 200px;
    }
</style>