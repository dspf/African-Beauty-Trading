@model List<African_Beauty_Trading.Models.CartItem>
@{
    ViewBag.Title = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <!-- Display success/error messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["WarningMessage"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["WarningMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-shopping-cart me-2"></i>My Cart</h2>
        <span class="badge bg-primary rounded-pill" id="cart-count">@Model.Count item(s)</span>
    </div>

    @if (Model.Any())
    {
        using (Html.BeginForm("UpdateCart", "Cart", FormMethod.Post, new { id = "cart-form" }))
        {
            @Html.AntiForgeryToken()

            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Product</th>
                                    <th scope="col">Type</th>
                                    <th scope="col" class="text-center">Quantity</th>
                                    <th scope="col" class="text-end">Unit Price</th>
                                    <th scope="col" class="text-end">Total</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    var item = Model[i];
                                    <tr data-product-id="@item.ProductId" data-is-rental="@item.IsRental.ToString().ToLower()">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(item.ImagePath))
                                                {
                                                    <img src="@item.ImagePath" alt="@item.ProductName" class="img-thumbnail me-3" style="width: 60px; height: 60px; object-fit: cover;">
                                                }
                                                else
                                                {
                                                    <div class="flex-shrink-0 bg-light rounded p-2 me-3">
                                                        <i class="fas fa-box-open text-muted" style="font-size: 1.5rem;"></i>
                                                    </div>
                                                }
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-0">@item.ProductName</h6>
                                                    <small class="text-muted">Product ID: @item.ProductId</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge @(item.IsRental ? "bg-warning" : "bg-success")">
                                                @(item.IsRental ? "Rental" : "Purchase")
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="input-group input-group-sm" style="width: 120px;">
                                                <button type="button" class="btn btn-outline-secondary quantity-decrease"
                                                        data-product-id="@item.ProductId"
                                                        data-is-rental="@item.IsRental">
                                                    <i class="fas fa-minus"></i>
                                                </button>
                                                <input type="number" name="quantities[@i].Quantity"
                                                       value="@item.Quantity"
                                                       min="1" max="10"
                                                       class="form-control text-center quantity-input"
                                                       data-product-id="@item.ProductId"
                                                       data-is-rental="@item.IsRental"
                                                       data-unit-price="@(item.IsRental ? item.RentalFee : item.Price)" />
                                                <input type="hidden" name="quantities[@i].ProductId" value="@item.ProductId" />
                                                <input type="hidden" name="quantities[@i].IsRental" value="@item.IsRental.ToString().ToLower()" />
                                                <button type="button" class="btn btn-outline-secondary quantity-increase"
                                                        data-product-id="@item.ProductId"
                                                        data-is-rental="@item.IsRental">
                                                    <i class="fas fa-plus"></i>
                                                </button>
                                            </div>
                                        </td>
                                        <td class="text-end">
                                            R @(item.IsRental ? item.RentalFee.ToString("N2") : item.Price.ToString("N2"))
                                        </td>
                                        <td class="text-end fw-bold item-total"
                                            data-product-id="@item.ProductId"
                                            data-is-rental="@item.IsRental">
                                            R @(item.IsRental ? (item.RentalFee * item.Quantity).ToString("N2") : (item.Price * item.Quantity).ToString("N2"))
                                        </td>
                                        <td class="text-end">
                                            @Html.ActionLink("Remove", "RemoveFromCart", new { productId = item.ProductId, isRental = item.IsRental },
                                                new { @class = "btn btn-sm btn-outline-danger", onclick = "return confirm('Are you sure you want to remove this item?')" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-white">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-outline-primary" onclick="setActionType('update')">
                                    <i class="fas fa-sync-alt me-1"></i> Update Cart
                                </button>
                                <button type="submit" class="btn btn-outline-secondary" onclick="setActionType('continue')">
                                    <i class="fas fa-arrow-left me-1"></i> Continue Shopping
                                </button>
                            </div>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <div class="mb-2">
                                <strong>Subtotal: R <span id="cart-subtotal">@Model.Sum(item => item.IsRental ? item.RentalFee * item.Quantity : item.Price * item.Quantity).ToString("N2")</span></strong>
                            </div>
                            @Html.ActionLink("Proceed to Checkout", "Checkout", "Cart", null, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            </div>

            <input type="hidden" id="actionType" name="actionType" value="" />
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">Your cart is empty</h4>
            <p class="text-muted">Start shopping to add items to your cart</p>
            @Html.ActionLink("Browse Products", "Browse", "Customer", null, new { @class = "btn btn-primary mt-2" })
        </div>
    }
</div>

@section Scripts {
    <script>
        function setActionType(type) {
            document.getElementById('actionType').value = type;
        }

        $(document).ready(function () {
            // Function to update item total
            function updateItemTotal(productId, isRental, quantity) {
                const unitPrice = parseFloat($(`.quantity-input[data-product-id="${productId}"][data-is-rental="${isRental}"]`).data('unit-price'));
                const total = unitPrice * quantity;
                $(`.item-total[data-product-id="${productId}"][data-is-rental="${isRental}"]`).text('R ' + total.toFixed(2));
                updateCartTotal();
            }

            // Function to update cart total
            function updateCartTotal() {
                let subtotal = 0;
                $('.item-total').each(function () {
                    const totalText = $(this).text().replace('R ', '');
                    subtotal += parseFloat(totalText);
                });
                $('#cart-subtotal').text(subtotal.toFixed(2));
            }

            // Increase quantity
            $('.quantity-increase').click(function () {
                const productId = $(this).data('product-id');
                const isRental = $(this).data('is-rental');
                const input = $(`.quantity-input[data-product-id="${productId}"][data-is-rental="${isRental}"]`);
                let quantity = parseInt(input.val());

                if (quantity < 10) {
                    quantity++;
                    input.val(quantity);
                    updateItemTotal(productId, isRental, quantity);
                }
            });

            // Decrease quantity
            $('.quantity-decrease').click(function () {
                const productId = $(this).data('product-id');
                const isRental = $(this).data('is-rental');
                const input = $(`.quantity-input[data-product-id="${productId}"][data-is-rental="${isRental}"]`);
                let quantity = parseInt(input.val());

                if (quantity > 1) {
                    quantity--;
                    input.val(quantity);
                    updateItemTotal(productId, isRental, quantity);
                }
            });

            // Manual input change
            $('.quantity-input').on('input', function () {
                const productId = $(this).data('product-id');
                const isRental = $(this).data('is-rental');
                let quantity = parseInt($(this).val());

                if (isNaN(quantity) || quantity < 1) {
                    quantity = 1;
                    $(this).val(1);
                } else if (quantity > 10) {
                    quantity = 10;
                    $(this).val(10);
                }

                updateItemTotal(productId, isRental, quantity);
            });
        });
    </script>
}

